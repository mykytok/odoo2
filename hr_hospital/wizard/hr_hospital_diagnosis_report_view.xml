<odoo>
    <record id="hr_hospital_diagnosis_report_form" model="ir.ui.view">
        <field name="name">hr.hospital.diagnosis.report.form</field>
        <field name="model">hr.hospital.diagnosis.report</field>
        <field name="arch" type="xml">
            <form>
                <div class="alert alert-info text-center" role="status">
                    Hospital diagnosis report
                </div>
                <group>
                    <group>
                        <field name="doctor_ids"/>
                        <field name="disease_ids"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                </group>
                <footer>
                    <button string="Update" name="update_diagnosis_ids" type="object" class="oe_highlight" data-hotkey="q"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="hr_hospital_diagnosis_report_action" model="ir.actions.act_window">
        <field name="name">Update personal doctor</field>
        <field name="res_model">hr.hospital.diagnosis.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
