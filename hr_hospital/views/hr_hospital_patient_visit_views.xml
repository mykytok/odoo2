<odoo>
        <record id="hr_hospital_patient_visit_tree" model="ir.ui.view">
            <field name="name">hr.hospital.patient.visit.tree ()</field>
            <field name="model">hr.hospital.patient.visit</field>
            <field name="arch" type="xml">
                <tree>
                    <header>
                        <button name="%(hr_hospital.hr_hospital_diagnosis_report_action)d"
                                string="Diagnosis report" type="action" class="oe_stat_button"
                                display="always"/>
                    </header>
                    <field name="status"/>
                    <field name="hr_hospital_doctor_id"/>
                    <field name="hr_hospital_patient_id"/>
                    <field name="scheduled_datetime"/>
                    <field name="visit_datetime"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="hr_hospital_patient_visit_form" model="ir.ui.view">
            <field name="name">hr.hospital.patient.visit.form ()</field>
            <field name="model">hr.hospital.patient.visit</field>
            <field name="arch" type="xml">
                <form>
                    <header></header>
                    <sheet>
                        <group>
                            <group>
                                <field name="hr_hospital_doctor_id"/>
                                <field name="hr_hospital_patient_id"/>
                                <field name="hr_hospital_diagnosis_ids"/>
                                <field name="status"/>
                                <field name="scheduled_datetime"/>
                                <field name="visit_datetime"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hr_hospital_patient_visit_window" model="ir.actions.act_window">
            <field name="name">Patient visit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.hospital.patient.visit</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_hospital_menu_patient_visit"
                  action="action_hr_hospital_patient_visit_window"
                  parent="hr_hospital_menu_drop_down"
                  name="Patient visit" sequence="100"/>

</odoo>
