<odoo>
        <record id="hr_hospital_doctors_specialty_tree" model="ir.ui.view">
            <field name="name">hr.hospital.doctors.specialty.tree ()</field>
            <field name="model">hr.hospital.doctors.specialty</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="hr_hospital_doctors_specialty_form" model="ir.ui.view">
            <field name="name">hr.hospital.doctors.specialty.form ()</field>
            <field name="model">hr.hospital.doctors.specialty</field>
            <field name="arch" type="xml">
                <form>
                    <header></header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hr_hospital_doctors_specialty_window" model="ir.actions.act_window">
            <field name="name">Doctor's specialty</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.hospital.doctors.specialty</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_hospital_menu_doctors_specialty"
                  action="action_hr_hospital_doctors_specialty_window"
                  parent="hr_hospital_menu_drop_down"
                  name="Doctor's specialty" sequence="200"/>

</odoo>
